<h2>{{viewTitle}}</h2>
<hr>

<form action="/employee" method="post" class="bg-white " style="padding:20px">
    <div class="form-group" autocomplete="false">
        <label>Full Name</label>
        <input type="text" class="form-control" value='{{employee.fullname}}' name="fullName" placeholder="Enter Name">
        <div class="text-danger">
            {{employee.fullNameError}}
        </div>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" value='{{employee.email}}' name="email" placeholder="Enter Email">
          <div class="text-danger">
            {{employee.emailError}}
        </div>
    </div>

    <div class="form-group">
        <label>Contact</label>
        <input type="text" class="form-control" value='{{employee.phone}}' name="phone" placeholder="Enter Contact">
    </div>

    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control"  value='{{employee.address}}' name="address" placeholder="Enter Address">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>